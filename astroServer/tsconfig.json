{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@": ["./src/*"],
            "@components/*": ["./components/*"],
            "@styles/*": ["./styles/*"],
            "@utils/*": ["./utils/*"],
            "@hooks/*": ["./hooks/*"],
            "@context/*": ["./context/*"],
            "@pages/*": ["./pages/*"],
            "@assets/*": ["./assets/*"],
            "@types/*": ["./types/*"],
            "@services/*": ["./services/*"],
            "@constants/*": ["./constants/*"],
            "@config/*": ["./config/*"],
            "@layouts/*": ["./layouts/*"]
        }
    }
}
